<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
		<report id="consumable_purchase_report_id" model="account.voucher"
			string="Consumable Purchase order" report_type="qweb-pdf"
			name="purchase_extended_ept.consumable_purchase_report_template"
			file="purchase_extended_ept.consumable_purchase_report_template" />
			
	
		<template id="consumable_purchase_report_document">
			<t t-call="report.external_layout">
				<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
				<div class="page">
					<div class="row">
						<div class="col-xs-5 col-xs-offset-7">
							<address t-field="o.partner_id"
								t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}' />
						</div>
					</div>

					<h2>
						<span t-field="o.number" />
					</h2>

					<div class="row mt32 mb32">
						<div class="col-xs-2" t-if="o.date">
							<strong>Bill Date:</strong>
							<p t-field="o.date" />
						</div>
						<div class="col-xs-2" t-if="o.date_due">
							<strong>Due Date:</strong>
							<p t-field="o.date_due" />
						</div>
						<div class="col-xs-2" t-if="o.journal_id">
							<strong>Journal:</strong>
							<p t-field="o.journal_id.name" />
						</div>
						<div class="col-xs-2" t-if="o.pay_now">
							<strong>Payment:</strong>
							<p t-field="o.pay_now" />
						</div>

						<div name="reference" class="col-xs-2" t-if="o.reference">
							<strong>Reference:</strong>
							<p t-field="o.reference" />
						</div>
					</div>

					<table class="table table-condensed">
						<thead>
							<tr>
								<th>Description</th>
								<th class="text-right">Account</th>
								<th class="text-right">Quantity</th>
								<th class="text-right">Unit Price</th>
								<th class="text-right">Taxes</th>
								<th class="text-right">Price</th>
							</tr>
						</thead>
						<tbody class="invoice_tbody">
							<tr t-foreach="o.line_ids" t-as="l">
								<td>
									<span t-field="l.name" />
								</td>
																<td class="text-right">
									<span t-field="l.account_id.name" />
								</td>
								
								<td class="text-right">
									<span t-field="l.quantity" />
								</td>
								<td class="text-right">
									<span t-field="l.price_unit" />
								</td>
								<td class="text-right">
									<span
										t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_ids))" />
								</td>
								<td class="text-right">
									<span t-field="l.price_subtotal"
										t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}' />
								</td>
							</tr>
						</tbody>
					</table>

					<div class="row">
						<div class="col-xs-4 pull-right">
							<table class="table table-condensed">
								<tr>
									<td>Taxes Amount</td>
									<td class="text-right">
									<span t-field = "o.tax_amount" 
									t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
									</td>
								</tr>
								<tr class="border-black">
									<td>
										<strong>Total</strong>
									</td>
									<td class="text-right">
										<span t-field="o.amount"
											t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}' />
									</td>
								</tr>
							</table>
						</div>
					</div>
				</div>
			</t>
		</template>

		<template id="consumable_purchase_report_template">
			<t t-call="report.html_container">
				<t t-foreach="docs" t-as="o">
					<t t-call="purchase_extended_ept.consumable_purchase_report_document"
						t-lang="o.partner_id.lang" />
				</t>
			</t>
		</template>
	</data>
</openerp>