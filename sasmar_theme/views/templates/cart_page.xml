<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>


	
<!-- Wizard in cart,checkout,payment page -->
	
<template id="extended_cart_lines" name="website_sale.cart_lines">
	<xpath expr="//div[@class='js_cart_lines pull-right']"  position="attributes">
		<attribute name='style'>display:none</attribute>
    </xpath>

</template>


<template id="website_sale.cart" name="Shopping Cart">
  <t t-call="website.layout">

		  	<!-- Start Facebook Event Pixel Code -->
		  	<script>
				fbq('track', 'AddToCart');
			</script>
			<!-- End Facebook Event Pixel Code -->
			
      <div id="wrap">
        <div class="container oe_website_sale">
          <t t-call="website_sale.wizard_checkout">
            <t t-set="step" t-value="10"/>
          </t>
          <h1 class="mb32">Shopping Cart</h1>
          <div class="row">
              <div class="col-md-8 col-sm-9 oe_cart">

                  <t t-call="website_sale.cart_lines"/>

                  <div class="clearfix"/>
				  
				          <a href="/shop" class="btn btn-primary mb32"><span class="fa fa-long-arrow-left" style="color:#fff;"/> <span class="hidden-xs" style="color:#fff;">Continue Shopping</span><span class="visible-xs-inline" style="color:#fff;">Continue</span></a>
                  <a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn-primary pull-right mb32" href="/shop/checkout"><span class="hidden-xs" style="color:#fff;">Process Checkout</span><span class="visible-xs-inline" style="color:#fff;">Checkout</span> <span class="fa fa-long-arrow-right" style="color:#fff;"/></a>
                  
                  <!-- Clear Shopping cart code -->
        				  <a href="#" t-if="website_sale_order and website_sale_order.website_order_line"
        					class="btn btn-primary mb32 clear_cart">
        					<span class="fa fa-trash-o" />
        					<span class="hidden-xs">Clear Cart </span>
        					<span class="visible-xs-inline">Clear Cart</span>
        				  </a>
			
			
			

                  <div class="oe_structure"/>
                  </div>
