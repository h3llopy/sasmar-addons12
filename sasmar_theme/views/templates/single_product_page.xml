<!-- sasmar_product_category_list in shop page -->
<template id="sasmar_product_category_list" name="Sasmar Product Category Dropdown">


		<div class="dropdown btn-group">
		
			<t t-set="website_category" t-value="website.get_category_available(show_visible=True)" />
			<t t-set="curr_categ" t-value="website.get_current_category()" />
			
			<a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" style="background-color: orange !important;">
					<span t-esc="curr_categ and curr_categ.name or ' - '" />
				<span class="caret"></span>

			</a>

				<ul class="dropdown-menu" role="menu">
		 	  	<t t-foreach="website.get_category_filter()" t-as="category">
		            <li t-if="category and request.httprequest and request.httprequest.path" t-att-class="(request.httprequest.path.endswith(slug(category))) and 'active'">
		            	<a t-attf-href="/shop/category/#{slug(category)}">
		            		<span t-esc="category.name"/>
		            	</a>
		            </li>
				  </t>
				 </ul>
		  </div>
		          
</template>



<!-- website_sale.products page -->
<template id="hide_products_pager_page" inherit_id='website_sale.products'>

	<!-- Hide products_pager class -->

	<xpath expr="//div[hasclass('products_pager')]" position="replace">
	    <div class="products_pager">
		    <div class="row" style="width: 100%;">
		      <t t-call="website_sale.search" style="display:none"><t t-set="search_class">pagination form-inline</t></t>
		      <t t-call="website_sale.pricelist_list" style="display:none"/>
		      <t t-call="sasmar_theme.sasmar_product_category_list" style="margin: 20px 0;"/>
		      <t t-call="website.pager" style="display:none"/>
		    </div>
        </div>
          
	</xpath>

</template>

