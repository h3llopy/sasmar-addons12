<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<!-- Product Form View Inherited -->
		<record model="ir.ui.view" id="view_product_template_form_inherited">
    		<field name="name">product.template.frm.inherited</field>
    		<field name="model">product.template</field>    		
			<field name="inherit_id" ref="product.product_template_only_form_view"/>    		
    		<field name="arch" type="xml">        					
    			<xpath expr="//field[@name='website_style_ids']" position="after">
                    <field name="featured_products" nolabel="0" />
                    <field name="popular_products" nolabel="0"/> 
                </xpath>	
                
                <xpath expr="//field[@name='list_price']" position="after">
                     <field name="pack_price"  />
                    <!-- <field name="pack_new_price"  />-->
                </xpath>	               			 
			</field>                	
    	</record>
    	
		<!-- INHERITED FORM -->
		    <record id="view_product_description_form" model="ir.ui.view">
		        <field name="name">product.template.frm.inherited</field>
		        <field name="model">product.template</field>
		        <field name="inherit_id" ref="product.product_template_form_view"/>
		        <field name="arch" type="xml">
		        
		        <xpath expr="//group[@name='group_standard_price']" position="after">
		                <group string="Product Description">
		                   <field name="description"/>
		                </group>
		            </xpath>
		        </field>
		    </record>
		    
 		<!-- Product Category -->
		<record model="ir.ui.view" id="view_product_public_category_inherit">
    		<field name="name">product.public.category.inherited</field>
    		<field name="model">product.public.category</field>    		
			<field name="inherit_id" ref="website_sale.product_public_category_form_view"/>    		
    		<field name="arch" type="xml">        					
    			<xpath expr="//field[@name='sequence']" position="after">
                    <field name="include_in_menu" attrs="{'invisible':[('parent_id','=',True)]}"/>   <!-- Dynamic Menu Category -->
                </xpath>	               				         
			</field>                	
    	</record>   	
    	
	</data>
</odoo>
