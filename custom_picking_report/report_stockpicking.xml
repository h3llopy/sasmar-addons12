<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_picking_1">
			
				<t t-call="web.html_container">
            	<t t-call="web.external_layout">
                
                
				<t t-foreach="docs" t-as="o">
					
						<div class="page">

							
							
								<br></br>
								<br></br>
								<div  class="row mt32 mb32">
								<t t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
									<span style="font-size:20">
										<strong>Delivery Note</strong>
									</span>
									<br></br>
									<br></br>
								</t>
								<t t-if="o.picking_type_id.code=='incoming' and o.partner_id">
									<span style="font-size:20">
										<strong>Recipe Note</strong>
									</span>
								</t>
								<br></br>
								<br></br>
							</div>
								<div id="informations" class="row mt32 mb32">
								<div class="col-xs-5">
									<div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
										<span>
											<strong>Supplier Address:</strong>
										</span>
									</div>
									<div t-if="o.picking_type_id.code=='internal' and o.partner_id">
										<span>
											<strong>Warehouse Address:</strong>
										</span>
									</div>

									<div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
										<table style="width: 100%">
											<tr>
												<td>
													<span>
														<b>INVOICE TO: </b>
													</span>
												</td>
											</tr>
											<t t-set="company" t-value="get_partner_company_invoice" />
											<t t-if="company != False">
												<tr>
													<td>
														<span t-esc="get_partner_company_invoice" />
													</td>
												</tr>
											</t>
											<t t-set="partner_street" t-value="get_partner_street_invoice" />
											<t t-if="partner_street != False">
												<tr>
													<td>
														<span t-esc="get_partner_street_invoice" />
													</td>
												</tr>
											</t>
											<t t-set="partner_street2" t-value="get_partner_street_invoice2" />
											<t t-if="partner_street2 != False">
												<tr>
													<td>
														<span t-esc="get_partner_street_invoice2" />
													</td>
												</tr>
											</t>
											<t t-set="zip_invoice" t-value="get_partner_zip_invoice" />
											<t t-if="zip_invoice != False">
												<tr>
													<td>
														<span t-esc="get_partner_zip_invoice" />
													</td>
												</tr>
											</t>
											<t t-set="country_invoice" t-value="get_partner_country_invoice" />
											<t t-if="country_invoice != False">
												<tr>
													<td>
														<span t-esc="get_partner_country_invoice" />
													</td>
												</tr>
											</t>
											<t t-set="partner_phone" t-value="get_invoice_partner_phone" />
											<t t-if="partner_phone != False">
												<tr>
													<td>
														<span t-esc="get_invoice_partner_phone" />
													</td>
												</tr>
											</t>
										</table>

									</div>

								</div>
								<div class="col-xs-4">
									<table style="width: 100%;">

										<tr>
											<td>
												<span>
													<b>SHIP TO:</b>
												</span>
											</td>
										</tr>

										<t t-set="company" t-value="get_partner_company" />
										<t t-if="company != False">
											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_company" />
												</td>
											</tr>
										</t>
										<t t-set="partner" t-value="get_partner_name" />
										<t t-if="partner != False">

											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_name" />
												</td>
											</tr>
										</t>
										<t t-set="street" t-value="get_partner_street" />
										<t t-if="street != False">
											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_street" />
												</td>
											</tr>
										</t>

										<t t-set="street2" t-value="get_partner_street2" />
										<t t-if="street2 != False">
											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_street2" />
												</td>
											</tr>
										</t>
										<t t-set="zip" t-value="get_partner_zip" />
										<t t-if="zip != False">
											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_zip" />
												</td>
											</tr>
										</t>
										<t t-set="country" t-value="get_partner_country" />
										<t t-if="country != False">
											<tr>
												<td>
													<span style="padding-left: 5px;" t-esc="get_partner_country" />
												</td>

											</tr>

										</t>
									</table>

								</div>

								<div class="col-xs-3">
									<div>
										<span class="text-right">
											<strong>INVOICE NO:</strong>
										</span>
										<span t-esc="get_invoice" />
										<br></br>
										<span class="text-right">
											<strong>DATE:</strong>
										</span>
										<span t-esc="get_invoice_date" />

									</div>
								</div>

							</div>
							<br></br>
							<br></br>
							<hr></hr>

							<table>
								<thead>
									<tr>
										<th width="20%">
											<strong>SHIP DATE</strong>
										</th>
										<th width="20%">
											<strong>SHIP VIA</strong>
										</th>
										<th width="20%">
											<strong>CONTACT PERSON</strong>
										</th>
										<th width="20%">
											<strong>CONTACT NO</strong>
										</th>
										<th width="20%">
											<strong>PO NO</strong>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>
											<t t-if="o.picking_type_id.code=='outgoing'">
												<span t-field="o.scheduled_date" />
											</t>
										</td>
										<td>
											<t t-if="o.picking_type_id.code=='outgoing'">
												<span t-esc="get_ship_via" />
											</t>
										</td>
										<td>
											<span t-esc="get_partner_name" />
										</td>

										<td>
											<span t-esc="get_partner_phone" />
										</td>
										<td>
											<t t-if="o.picking_type_id.code=='outgoing'">
												<span t-esc="get_po_no" />
											</t>
											<t t-if="o.picking_type_id.code=='incoming'">
												<span t-field="o.origin" />
											</t>
										</td>
									</tr>
								</tbody>
							</table>
							<br />
							<br />
							<!-- delivry order -->
							<table class="table table-condensed" t-if="not o.move_ids_without_package ">
								<thead>
									<tr>
										<th>
											<strong>ITEM CODE</strong>
										</th>
										<th>
											<strong>DESCRIPTION</strong>
										</th>
										<th>
											<strong>VOLUME</strong>
										</th>
										<th>
											<strong>WEIGHT</strong>
										</th>

										<th>
											<strong>QTY</strong>
										</th>
									</tr>

								</thead>
								<tbody>
									<tr t-foreach="o.move_lines" t-as="move">
										<t
											t-if="(o.state != 'partially_available') or (move.reserved_availability > 0)">
											<td>
												<span t-field="move.product_id.default_code" />
											</td>

											<td>
												<span t-field="move.name" />
											</td>
											<td>
												<span t-esc="get_volume.get(move)" />
											</td>
											<td>
												Net:
												<span t-esc="get_weight_net(move)" />
												<span t-field="move.weight_uom_id" />
												<br />
												Gross:
												<span t-esc="get_weight_gross(move)" />
												<span t-field="move.weight_uom_id" />
											</td>

											<td>
												<t t-if="o.state == 'partially_available'">
													<span t-field="move.reserved_availability" />
													<span t-field="move.product_id.uom_id" groups="product.group_uom" />
												</t>
												<t t-if="o.state != 'partially_available'">
													<span t-field="move.product_uom_qty" />
													<span t-field="move.product_uom" groups="product.group_uom" />
												</t>
											</td>
										</t>
									</tr>
								</tbody>
							</table>
							<table class="table table-condensed" t-if="o.move_ids_without_package">
								<thead>
									<tr>
										<th>
											<strong>ITEM CODE</strong>
										</th>
										<th>
											<strong>DESCRIPTION</strong>
										</th>
										<th>
											<strong>VOLUME</strong>
										</th>

										<th>
											<strong>WEIGHT</strong>
										</th>
										<th>
											<strong>QTY</strong>
										</th>
									</tr>
								</thead>
								<tbody>
									<tr t-foreach="o.move_ids_without_package" t-as="pack_operation">
										<td>
											<span t-field="pack_operation.product_id.default_code" />
											<t
												t-if="not pack_operation.product_id and pack_operation.package_id">
												<span t-field="pack_operation.package_id" />
											</t>
										</td>
										<td>
											<span t-field="pack_operation.product_id.name" />
										</td>
										<td>
											<span t-esc="get_volume_op" />
										</td>
										<td>
											Net:
											<span t-esc="get_weight_net_op" />
											<br />
											Gross:
											<span t-esc="get_weight_gross_op" />
										</td>
										<td>
											<span t-field="pack_operation.product_qty" />
										</td>
									</tr>
								</tbody>
							</table>

						</div>
					</t>
				</t>
			</t>
		</template>
		<!-- <template id="picking_note_report">
			<t t-call="web.html_container">
				<t t-foreach="doc_ids" t-as="doc_id">
					<t
						t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'custom_picking_report.report_picking_1')" />
				</t>
			</t>
		</template -->
	</data>
</odoo>

